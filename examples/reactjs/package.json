{
  "name": "@brizy/reactjs",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@brizy/docs-react": "*",
    "@brizy/react": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1"
  },
  "devDependencies": {
    "@brizy/eslint-config": "*",
    "@brizy/prettier-config": "*",
    "@brizy/tsconfig": "*",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "dev": "PORT=4000 DISABLE_ESLINT_PLUGIN=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier-check": "prettier --check src/**/*.{ts,tsx,js,jsx}",
