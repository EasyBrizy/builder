{
  "extends": "@brizy/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config": ["config"],
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
