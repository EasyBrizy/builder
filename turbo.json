{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "env": [
        "BUNNY_HOST_NAME",
        "BUNNY_STORAGE_ZONE_NAME",
        "BUNNY_ACCESS_KEY",
        "HOST_NAME"
      ],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"],
      "env": [
        "NEXT_PUBLIC_EDITOR_TOKEN",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "@brizy/nextjs#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "@brizy/nextjs#dev": {
      "cache": false,
      "persistent": true
    },

    "@brizy/nuxtjs#build": {
      "dependsOn": ["^build"],
      "outputs": [".nuxt/**"]
    },

    "@brizy/nuxtjs#dev": {
      "cache": false,
      "persistent": true
    },

    "@brizy/react#dev": {
      "dependsOn": ["@brizy/assetmanager#dev", "@brizy/sdk#dev"]
    },

    "@brizy/vue#dev": {
      "dependsOn": ["@brizy/assetmanager#dev", "@brizy/sdk#dev"]
    },

    "@brizy/assetmanager#dev": {},

    "@brizy/docs-react#dev": {},

    "@brizy/docs-vue#dev": {},

    "@brizy/sdk#dev": {},

    "@brizy/core-client#dev": {},

    "@brizy/builder#dev": {
      "dependsOn": ["@brizy/core-client"]
    },

    "@brizy/mock-api-client#dev": {
      "dependsOn": ["@brizy/core-client"]
    },

    "@brizy/cms#dev": {
      "dependsOn": ["@brizy/core-client"]
    },

    "@brizy/contentful#dev": {
      "dependsOn": ["@brizy/core-client"]
    },

    "@brizy/shopify#dev": {
      "dependsOn": ["@brizy/core-client"]
    },

    "@brizy/jsapp#dev": {
      "dependsOn": ["@brizy/core-client"]
    },

    "lint": {},
    "tsc": {
      "dependsOn": ["^build"]
    },
    "prettier-check": {}
  }
}
