{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },

    "@brizy/nextjs#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "@brizy/nextjs#dev": {
      "cache": false,
      "persistent": true
    },

    "@brizy/react#dev": {
      "dependsOn": ["@brizy/assetmanager#dev"]
    },

    "@brizy/assetmanager#dev": {},

    "@brizy/docs-react#dev": {},

    "lint": {}
  }
}
