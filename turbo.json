{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },

    "@brizy/nextjs#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "@brizy/nextjs#dev": {
      "cache": false,
      "persistent": true
    },

    "@brizy/nuxtjs#build": {
      "dependsOn": ["^build"],
      "outputs": [".nuxt/**"]
    },

    "@brizy/nuxtjs#dev": {
      "cache": false,
      "persistent": true
    },

    "@brizy/react#dev": {
      "dependsOn": ["@brizy/assetmanager#dev", "@brizy/sdk#dev"]
    },

    "@brizy/vue#dev": {
      "dependsOn": ["@brizy/assetmanager#dev", "@brizy/sdk#dev"]
    },

    "@brizy/assetmanager#dev": {},

    "@brizy/docs-react#dev": {},

    "@brizy/docs-vue#dev": {},

    "@brizy/sdk#dev": {
      "dependsOn": ["@brizy/provider#dev"]
    },

    "@brizy/provider#dev": {},

    "lint": {},
    "tsc": {
      "dependsOn": ["^build"]
    },
    "prettier-check": {}
  }
}
