{
  "name": "@brizy/content-placeholder",
  "version": "1.0.0",
  "description": "Brizy content placeholders used to put dynamic data in compiled page (PREVIEW)",
  "main": "build/index.js",
  "module": "build/es/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "npx nodemon",
    "build": "npm run clean && npx tsc",
    "build:es": "rimraf ./build/es && npx swc ./src -d ./build/es/",
    "start": "npm run build && node build/index.js",
    "lint": "npx eslint ./src",
    "tsc": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest test",
    "check": "npm run lint && npm run tsc && npm run test",
    "clean": "rimraf ./build",
    "prettier:check": "prettier --config .prettierrc --check src\"**/*.*\"",
    "prettier:write": "prettier --config .prettierrc --write src\"**/*.*\"",
    "prepublishOnly": "npm run clean && npm run check && npm run build && npm run build:es"
  },
  "keywords": [
    "brizy",
    "content",
    "placeholder"
  ],
  "author": "brizy",
  "license": "ISC",
  "homepage": "https://brizy.io",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.85",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  },
  "files": [
    "build"
  ]
}
